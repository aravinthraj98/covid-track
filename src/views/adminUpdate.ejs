<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
        integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
        integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"
        integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV"
        crossorigin="anonymous"></script>
    <link href="/assets/style.css" rel=stylesheet>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: lightcoral;">
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Home</a>
                </li>
            </ul>
            <p class="form-inline my-2 my-lg-0 p-1">
                <input class="form-control mr-sm-2" size="25" id="email" type="search" placeholder="Search"
                    aria-label="Search">
                <button class="btn btn-outline-dark my-2 my-sm-0" id="search">Search</button>
            </p>
        </div>
    </nav>


    <div class="container jumbotron w-75 mt-3">
        <h1 class="display-4">Update Data</h1>
        <hr class="my-3">
        <table class="table table-striped">
            <thead style="background-color:lightcoral">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Oxygen(%)</th>
                    <th scope="col">Temperature(F)</th>
                </tr>
            </thead>
            <tbody id="tbody">
                <tr>
                    <td>Thomas Shelby</td>
                    <td>
                        <input type="number" class="form-control" id="oxygen1">
                    </td>
                    <td>
                        <input type="number" class="form-control" id="temp1">
                    </td>
                </tr>
               
            </tbody>
        </table>

        <div class="btn">
            <button id="update"class="btn btn-danger">Update</button>
            <button type="reset" class="btn btn-secondary ml-1">Clear</button>
        </div>
    </div>
    <script>
        var familymembers;
        
        $("#search").click(function () {
            let email = $("#email").val();
            if (email.length < 4) return;
            $.post("/api/admin/find", {
                email: email

            }, function (data, status) {
               if(typeof data=="object"){
                  $("tbody").html("");
                  const email =data.email;
                 familymembers=data.familymembers;
                 
                  for(i in familymembers){
                       let tdata = $("tbody").html();
                       let o="O"+i;
                       let data=`<tr><td>
                           ${familymembers[i]}</td>
                             <td>
                        <input type="number" class="form-control" id=${o} required>
                             </td>
                    <td>
                        <input type="number" class="form-control" id=${i} required>
                    </td></tr>`
                      
                    $("tbody").html(`${tdata}${data}`);
                  }
                   
               }
               else{
                   alert("no");
               }
            });
            $("#update").click(function(){
                let readings =[]
                let isempty = false;
                for(i=0;i<familymembers.length;i++){
                    let o="O"+i;
                    let temp = $(`#${i}`).val();
                    let oxy = $(`#${o}`).val();
                    
                    if(temp.length<1 && oxy.length<1){
                        alert("some details is empty");
                        isempty=true;

                        break;


                    }
                    let getreadings = `{"temperature":${temp},"oxygen":${oxy}}`;
                    console.log(getreadings);
                    readings.push(getreadings);
                    

                }
                if(isempty) return;
                $.post("/api/admin/update",{
                    email:email,
                    dailyreport:readings
                },function(data,status){
                    alert(data);
                })


            })

        });


    </script>
    <script src=https://code.jquery.com/jquery-3.5.1.min.js></script>

</body>

</html>